<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Current Cost Per Watt :$10.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_cost_currentTextView" />

    <TextView
        android:text="Enter Cost Per Watt From Your Electricity Commission"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_cost_TextView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/change_cost_NewRate" />
</LinearLayout>